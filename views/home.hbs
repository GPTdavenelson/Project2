{{> header}}

<main>
  <h1 id="song-title">{{ page.title }}</h1>

  {{> searchbar}}


  <h2 id="head-1">Top <br> Playlists</h2>

  <section>
    <div class="grid-container">
      <div class="grid-x grid-margin-x small-up-2 medium-up-3">
        <div class="cell">
          <div class="card">
            <img src="">
            <div class="card-section">
              <h4><a class="billboardText" href="https://www.billboard.com/charts/hot-100">Billboard Hot 100</h4>
            </div>
          </div>
        </div>
        <div class="cell">
          <div class="card">
            <img src="">
            <div class="card-section">
              <h4><a class="billboardText" href="https://www.billboard.com/charts/rock-albums">Billboard Top Rock</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="grid-container">
      <div class="grid-x grid-margin-x small-up-2 medium-up-3">
        <div class="cell">
          <div class="card">
            <img src="">
            <div class="card-section">
              <h4><a class="billboardText" href="https://www.billboard.com/charts/r-b-hip-hop-songs">Billboard Hot R&B
              </h4>
            </div>
          </div>
        </div>
        <div class="cell">
          <div class="card">
            <img src="">
            <div class="card-section">
              <h4><a class="billboardText" href="https://www.billboard.com/charts/country-songs">Billboard Hot Country
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<h2 id="play-1">My <br> Playlist</h2>

<ul class="results-list">
  {{#if page.playlistData}}
  {{#each page.playlistData}}
  <li class="result-list-item">
    <image src="{{this.artwork_url}}" />
    <div>
      <div>Artist: {{this.artist_name}}</div>
      <div>Track: {{this.track_name}}</div>
      <div>Album: {{this.album_name}}</div>
      <div>Genre: {{this.genre_name}}</div></span>
    </div>

  </li>
  {{/each}}
  {{else}}
  <li class="list-group-item">No songs in playlist</li>
  {{/if}}
</ul>


{{>footer}}